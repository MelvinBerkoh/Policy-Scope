{
  "manifest_version": 3,
  "name": "PolicyScope",
  "description": "Highlights important clauses in agreements before you click I agree.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "PolicyScope"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ]
}